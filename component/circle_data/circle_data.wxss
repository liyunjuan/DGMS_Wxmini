/* component/circle_data/circle_data.wxss */
@import '/style_pub/text.wxss';

.circle_main{
  overflow-y: auto;
  font-family: "黑体";
}
.circle_main .m-content{
  border-bottom: 1px solid #e1e1e1;
  display: flex;
  align-items:center;
  font-size: 0;
  padding: 25rpx;
}
.circle_main .m-content:last-of-type{
  border-bottom: none;
}
.circle_main .m-content .m-left {
  width: 50px;
}
.circle_main .m-content .m-left image {
  width: 100rpx;
  height: 100rpx;
}
.circle_main .m-content .m-right {
  flex: 1;
  width: 7.13333333rem;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 0;
  text-indent: 16rpx;
}
.circle_main .m-content .m-right .circle_title {
  font-size: 30rpx;
  margin-bottom: 22rpx;
}
.circle_main .m-content .m-right .circle_onlookers {
  display: inline-block;
  font-size: 20rpx;
  color: #ed997f;
}
.circle_main .m-content .m-right .cirle_desc{
  font-size: 28rpx;
  color: #969696;
}
.circle_main .m-content .cicle_icon{
  width: 70rpx;
  height: 70rpx;
}
.circle_main .m-content .cicle_icon image{
  width: 100%;
  height: 100%;
}